<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    android:weightSum="20">

    <!--header
        제목과 현장명등 검색 및 정보 출력
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <!--회사로고-->
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@drawable/border"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgKumkang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <!--Title-->
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sangsangfont"
                android:text="앙카 검증 시스템"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <!--현장정보-->
        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border2"
                android:gravity="center"
                android:layout_weight="7"
                android:text="현장정보"
                android:textColor="#8C8C8C"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@color/black"
                android:spinnerMode="dropdown"
                android:textColor="@color/black"
                android:background="@drawable/background_spinner"/>

        </LinearLayout>

        <!--선택 정보 이미지-->
        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border2"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/line8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/saveAnchor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="400dp"
                    android:src="@drawable/choicetext" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:orientation="vertical"/>
        </LinearLayout>

        <!--앙카번호를 선택해주세요-->
        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="8"
            >
            <TextView
                android:id="@+id/txtAnchor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border4"
                android:gravity="center"
                android:text="Anchor 번호를 선택해주세요."
                android:textColor="#8C8C8C"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                android:layout_weight="0.5"/>
        </LinearLayout>


    </LinearLayout>


    <!--Body
        버튼 출력
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="13">

        <!--Tablayout-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tabTextColor="@color/black"
            />

        <!--ViewPager-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtSelectNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="✔선택한 앙카 번호:"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>

    </LinearLayout>


    <!--foot-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"></LinearLayout>

</LinearLayout>
